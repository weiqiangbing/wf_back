.upload {
  padding: 10px;
  box-sizing: border-box;
}
.upload .uni-input {
    border-radius: 3px;
    height: 34px;
    padding: 0 4px;
}
.upload .select_imgs {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding: 4px 10px;
}
.upload .select_imgs .item_img {
      width: 31%;
      height: 170px;
      margin-top: 8px;
      margin-bottom: 8px;
      position: relative;
}
.upload .select_imgs .item_img .close_btn {
        position: absolute;
        right: -4px;
        top: -4px;
        z-index: 99;
        background-color: #dd524d;
        color: #fff;
        border-radius: 50%;
        padding: 1px;
}
.upload .select_imgs .item_img image {
        width: 100%;
        height: 130px;
}
.upload .select_imgs .item_img .img_btn {
        font-size: 14px;
        background-color: #4e9eca;
        padding: 7px 10px;
        margin: 2px auto;
        text-align: center;
        display: table;
        border-radius: 4px;
        color: #fff;
}
.upload .select_imgs .item_img .prize_class {
        background-color: #5aba43;
}
.upload .select_imgs .add_btn {
      background-color: #e6e4e4;
      height: 130px;
